<div id='message_status' style='width:100%; color: #f4f3f1; padding: 20px; text-align: center;'></div>
<div id='message_form' style='padding: 20px;'>
<%= form_tag '/message/create', :remote => true do %>
  To: <%= @receiver.name %><bR><bR>
  <%= hidden_field_tag 'r_id', @receiver.id %>
  Message:<bR><bR><%= text_area_tag 'message' %>
  Send as SMS too: <%= check_box_tag 'sms', 'true' %>
  <%= submit_tag 'send', :class => 'medium button' %>
<% end %>
</div>

<div id='back_to_work' style='width:100%;text-align: center; padding:30px;'></div>